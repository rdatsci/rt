#!/usr/bin/env Rscript

library("methods")
library("rt")
doc = "
Usage:
  rhub [--platform=<platform>] [--checkforcran] [<path>]
Options:
  --platform=<platform>  Name of the platform to check on
  --checkforcran         Use check suggested for CRAN submission
  --rdevel               Use R devel for checks (only considered without --checkforcran)
"
rt:::cli.call("rhub", doc, commandArgs(TRUE))

# vim: ft=r
