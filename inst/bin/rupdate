#!/usr/bin/env Rscript

library("methods")
library("rt")
doc = "
Usage:
  rupdate [--neverupgrade --rebuild --dryrun]
Options:
  --neverupgrade  Does not update dependencies.
  --rebuild       Rebuild packages which are built against an older version of R.
  --dryrun        Does not update/install any packages and only shows messages.
"
rt:::cli.call("rupdate", doc, commandArgs(TRUE))

# vim: ft=r
